<h1><%= @user.name %>'s Homepage</h1>

<h3><%= @user.name %>'s Posts</h3>
<table>
  <tr>
    <th>Id</th><th>Title</th><th>Content</th>
  </tr>
<% @posts.each do |post| %>
  <tr>
    <td><%= post.id %></td>
    <td><a href="<%=@user.id%>/post/<%=post.id%>"><%= post.title %></a></td>
    <td><%= post.content %></td>
  </tr>
<% end %>
<tr><td><a href="<%=@user.id%>/post/new">new post</td></tr>
</table>

<p><a href="/user">Show all users</a></p>